    <TextView
        style="@style/tv.title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_name" />

    <LinearLayout
        android:id="@+id/layout_login_logining_block"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="30dp"
        android:visibility="visible" >

        <com.huawei.esdk.demo.widget.MyEditText
            android:id="@+id/met_login_gateway"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <com.huawei.esdk.demo.widget.MyEditText
            android:id="@+id/met_login_username"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <com.huawei.esdk.demo.widget.MyEditText
            android:id="@+id/met_login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/btn_login_login"
            style="@style/tv.btn_enable"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/login_svn" />

        <LinearLayout
            android:id="@+id/layout_login_logining_progress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/tv.btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bg_login_logining"
                android:text="@string/logining" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/bg_login_loading" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login_logined_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="80dp"
        android:visibility="gone" >

        <com.huawei.esdk.demo.widget.MyEditText
            android:id="@+id/met_login_tunnelip"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/btn_login_enter"
            style="@style/tv.btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/enter" />

        <TextView
            android:id="@+id/btn_logout"
            style="@style/tv.btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/logout" />

        <TextView
            style="@style/tv.btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/login_success" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg_login_success" />

        <TextView
            android:id="@+id/btn_check_update"
            style="@style/tv.btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/check_update" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_login_encrypt_decrypt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" >

        <TextView
            style="@style/tv.btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/encrypt_decrypt" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_lock" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_unlock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/btn_login_faq"
            style="@style/tv.btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:text="@string/faq" />
    </LinearLayout>

</LinearLayout>