<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/layout.title"
        >
        <TextView 
            android:layout_width="60dp"
            android:layout_height="50dp"
            style="@style/tv.btn"
            android:text="@string/back"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_http_back"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/urlconnection"
            android:layout_centerHorizontal="true"
            style="@style/tv.btn_nor"
            android:id="@+id/tv_http_title"
            />
        <TextView 
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="@string/guide"
            style="@style/tv.btn"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_http_guide"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/http_nav_btn_bg_nor"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/http_nav_login"
            style="@style/tv.smallbtn"
            android:id="@+id/btn_http_nav_login"
            />
        <TextView 
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/http_nav_seq"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/http_nav_userinfo"
            style="@style/tv.smallbtn"
            android:id="@+id/btn_http_nav_userinfo"
            />
        <TextView 
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/http_nav_seq"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/http_nav_download"
            style="@style/tv.smallbtn"
            android:id="@+id/btn_http_nav_download"
            />
        <TextView 
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/http_nav_seq"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/http_nav_upload"
            style="@style/tv.smallbtn"
            android:id="@+id/btn_http_nav_upload"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_http"
        android:layout_width="fill_parent"
        android:layout_height="400dp">
    </android.support.v4.view.ViewPager>

    
</LinearLayout>